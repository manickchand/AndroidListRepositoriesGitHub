<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_row_card_heigth"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_default"
    >

    <ImageView
        android:id="@+id/iv_book"
        android:layout_width="@dimen/dimen_26"
        android:layout_height="@dimen/dimen_26"
        android:layout_margin="@dimen/margin_default"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/book_black_36dp" />

    <TextView
        android:id="@+id/tv_repo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repo Name"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:layout_alignTop="@+id/iv_book"
        android:layout_toRightOf="@+id/iv_book"
        android:layout_toEndOf="@+id/iv_book" />

    <TextView
        android:id="@+id/tv_repo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_below="@+id/tv_repo_name"
        android:layout_marginTop="@dimen/margin_default"
        android:text="Repo description"
        android:maxLength="50"/>

    <TextView
        android:id="@+id/tv_repo_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_item_list_text"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_toLeftOf="@+id/iv_star"
        android:layout_below="@+id/tv_repo_description"
        android:textColor="@color/colorAccent"
        android:text="Language" />

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="@dimen/dimen_18"
        android:layout_height="@dimen/dimen_18"
        android:layout_marginTop="@dimen/margin_item_list_text"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_toLeftOf="@+id/tv_start_count"
        android:layout_below="@+id/tv_repo_description"
        app:srcCompat="@drawable/star_black_36dp" />

    <TextView
        android:id="@+id/tv_start_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_fork"
        android:layout_marginTop="@dimen/margin_item_list_text"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_below="@+id/tv_repo_description"
        android:text="15.00" />

    <ImageView
        android:id="@+id/iv_fork"
        android:layout_width="@dimen/dimen_18"
        android:layout_height="@dimen/dimen_18"
        android:layout_marginTop="@dimen/margin_item_list_text"
        android:layout_toLeftOf="@+id/tv_fork_count"
        android:layout_below="@+id/tv_repo_description"
        app:srcCompat="@drawable/ic_fork" />

    <TextView
        android:id="@+id/tv_fork_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_item_list_text"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_repo_description"
        android:text="1.00" />

    <View
        android:id="@+id/view"
        android:layout_alignParentBottom="true"
        android:background="#454545"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</RelativeLayout>